@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to IntelliLibrary</h1>
    <p>Your intelligent library management system.</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Book Management</h5>
                    <p class="card-text">Manage your library books, add new books, and track inventory.</p>
                    <a href="/Book" class="btn btn-primary">Go to Books</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Account</h5>
                    <p class="card-text">Register or login to access the full features.</p>
                    <a href="/Identity/Account/Register" class="btn btn-secondary">Register</a>
                    <a href="/Identity/Account/Login" class="btn btn-outline-secondary">Login</a>
                </div>
            </div>
        </div>
    </div>
</div> 